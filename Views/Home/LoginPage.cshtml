@model LoginUser
<div class="text-center">
    <h1 class="display-4">Login</h1>
    <p><a href="/register">Register A New Account</a></p>
    <form method="post" asp-controller="Home" asp-action="Login">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="alert-danger"></span>
        </div>
        <input type="submit" class="btn btn-info" value="Login" />
    </form>
</div>